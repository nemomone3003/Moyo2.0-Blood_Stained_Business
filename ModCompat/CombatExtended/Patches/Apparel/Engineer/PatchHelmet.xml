        <xpath>Defs/ThingDef[defName="Moyo2_EGHelmet"]/apparel/layers</xpath>
        <value>
            <layers>
                <li>OnHead</li>
                <li>StrappedHead</li>
                <li>Overhead</li>
            </layers>
        </value>
