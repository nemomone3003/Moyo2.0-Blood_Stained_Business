    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Moyo2_Wrench"]/tools</xpath>
        <value>
            <tools>
                <li Class="CombatExtended.ToolCE">
                    <label>handle</label>
                    <capacities>
