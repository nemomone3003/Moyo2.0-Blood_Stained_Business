            <MeleeCounterParryBonus>0.4</MeleeCounterParryBonus>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Moyo2_Wrench"]/equippedStatOffsets</xpath>
