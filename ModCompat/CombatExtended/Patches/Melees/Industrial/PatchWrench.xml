                    <armorPenetrationBlunt>7.605</armorPenetrationBlunt>
                </li>
            </tools>
        </value>
    </Operation>


    <!-- ========== Ability ========== -->

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/AbilityDef[defName="Moyo2_WrenchThrow"]/verbProperties</xpath>
        <value>
