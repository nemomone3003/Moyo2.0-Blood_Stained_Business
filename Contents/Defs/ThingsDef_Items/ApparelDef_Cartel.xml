<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- 내의 -->
	<!-- 카르텔 망토 -->
	<ThingDef ParentName="Moyo2_ApparelCategory_LightHouse">
		<defName>Moyo2_CartelHood</defName>
		<label>hooded black cloak</label>
		<description>Protective suit for temperature-sensitive moyos. Looks stylish as well.</description>
		<graphicData>
			<texPath>Apparel/Cartel/CartelCloak1</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<uiIconScale>1.2</uiIconScale>
		<!-- - -->
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToMake>25000</WorkToMake>
			<Mass>2.5</Mass>
			<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Heat>0.60</ArmorRating_Heat>
			<Insulation_Cold>35</Insulation_Cold>
			<Insulation_Heat>22.5</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.1</MoveSpeed>
			<HuntingStealth>0.25</HuntingStealth>
		</equippedStatOffsets>
		<!-- - -->
		<apparel>
			<drawData>
				<defaultData>
					<layer>73</layer>
				</defaultData>
			</drawData>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Cartel/CartelCloak</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Cartel_Hood</li>
			</tags>
		</apparel>
		<!-- - -->
		<recipeMaker>
			<researchPrerequisite>Moyo2_Abysstech_Pneumatic</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<unfinishedThingDef>UnfinishedHealthItemBionic</unfinishedThingDef>
		</recipeMaker>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Moyo2_Cloth_Depthweave>120</Moyo2_Cloth_Depthweave>
		</costList>
		<comps>
			<li Class="CompProperties_CauseHediff_Apparel">
				<hediff>Moyo2_CartelHood</hediff>
				<part>Head</part>
			</li>
		</comps>
	</ThingDef>
	<!--후드 헤디프-->
	<HediffDef>
		<defName>Moyo2_CartelHood</defName>
		<label>CartelHood</label>
		<description>Debug.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_RemoveIfApparelDropped"/>
		</comps>
		<isBad>false</isBad>
	</HediffDef>
</Defs>