<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>HoverCraftWreak</defName>
		<label>ruined hovercraft</label>
		<description>A spacer-tech shuttle designed for transit between surface and orbit, or between moons of a planetary system.</description>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>50</pathCost>
		<blockWind>true</blockWind>
		<passability>Impassable</passability>
		<fillPercent>1.0</fillPercent>
		<size>(5,3)</size>
		<drawHighlight>true</drawHighlight>
		<highlightColor>(0.56, 0.62, 0.9)</highlightColor>
		<graphicData>
			<texPath>Building/HoverCraft_Wreak</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(255,255,255)</color>
			<drawSize>(7,7)</drawSize>
			<shadowData>
				<volume>(4.1, 1.0, 1.8)</volume>
				<offset>(0, 0, -0.1)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>0</Flammability>
			<WorkToBuild>1500</WorkToBuild>
		</statBases>
		<tickerType>Normal</tickerType>
		<canOverlapZones>true</canOverlapZones>
		<killedLeavings Inherit="False">
			<Steel>225</Steel>
			<Abyssteel>15</Abyssteel>
			<ChunkSlagSteel>15</ChunkSlagSteel>
			<ComponentIndustrial>15</ComponentIndustrial>
		</killedLeavings>
		<costList>
			<Steel>900</Steel>
			<Abyssteel>100</Abyssteel>
			<ComponentIndustrial>60</ComponentIndustrial>
			<BlueMedicine>40</BlueMedicine>
			<MealSurvivalPack>100</MealSurvivalPack>
		</costList>
		<building Inherit="False">
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
			<claimable>false</claimable>
			<alwaysDeconstructible>true</alwaysDeconstructible>
		</building>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
		<drawerType>RealtimeOnly</drawerType>
		<repairEffect>ConstructMetal</repairEffect>
		<forceDebugSpawnable>true</forceDebugSpawnable>
		<uiIconScale>1.4</uiIconScale>
	</ThingDef>
	<ThingDef ParentName="BuildingNaturalBase">
		<defName>HadalSpire</defName>
		<label>hadalshard spire</label>
		<description>A spire of metallic coral indigenous to the hadal trenches. It can be mined as a whole or pick the shards shed from it.  Moyos have scoured the abyss in search of these coral reef grown over centuries to fuel their industries.</description>
		<graphicData>
			<texPath>Building/VoidSpire</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shaderType>Cutout</shaderType>
			<drawSize>4</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>9600</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<thingClass>Mineable</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<!-- <castEdgeShadows>true</castEdgeShadows> -->
		<fillPercent>1</fillPercent>
		<rotatable>false</rotatable>
		<saveCompressible>true</saveCompressible>
		<!-- <staticSunShadowHeight>1.0</staticSunShadowHeight> -->
		<mineable>true</mineable>
		<fertility>0</fertility>
		<canOverlapZones>false</canOverlapZones>
		<building>
			<isInert>true</isInert>
			<isNaturalRock>true</isNaturalRock>
			<canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
			<deconstructible>false</deconstructible>
			<destroyShakeAmount>0</destroyShakeAmount>
			<supportsWallAttachments>true</supportsWallAttachments>
			<isResourceRock>true</isResourceRock>
			<mineableThing>HadalShard</mineableThing>
			<mineableYield>120</mineableYield>
			<mineableScatterCommonality>0.2</mineableScatterCommonality>
			<mineableScatterLumpSizeRange>1~3</mineableScatterLumpSizeRange>
			<veinMineable>false</veinMineable>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Thump</damageDef>
				<multiplier>4</multiplier>
			</li>
		</damageMultipliers>
		<comps>
			<li Class="CompProperties_Spawner">
				<requiresPower>false</requiresPower>
				<thingToSpawn>HadalShard</thingToSpawn>
				<spawnCount>15</spawnCount>
				<spawnIntervalRange>
					<min>600000</min>
					<max>600000</max>
				</spawnIntervalRange>
				<writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(113,91,248,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
</Defs>