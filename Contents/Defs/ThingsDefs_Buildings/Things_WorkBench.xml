<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BenchBase">
		<defName>Moyo2_FabricationBench</defName>
		<label>abysstech production bench</label>
		<description>A workbench for producing abysstech items. It is capable of handling a variety of tasks, from producing tools, components, and apparel to dismantling mechanoids.</description>
		<thingClass>Moyo2.ThingClass_MoyoFabricationBench</thingClass>
		<!-- <thingClass>Building_WorkTable</thingClass> -->
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<graphicData>
			<texPath>Building/MoyoBench</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,3.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>4000</WorkToBuild>
			<Flammability>0.5</Flammability>
			<WorkTableWorkSpeedFactor>1.1</WorkTableWorkSpeedFactor>
		</statBases>
		<size>(3,1)</size>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>42</pathCost>
		<costList>
			<Steel>200</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<researchPrerequisites>
			<li>Moyo2_Abysstech_Pneumatic</li>
		</researchPrerequisites>
		<recipes>
			<li>Make_ComponentSpacer</li>
			<li>ButcherCorpseMechanoid</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<designationCategory>Production</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
					<li>Moyo2_FabricationAddon</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>500</basePowerConsumption>
				<shortCircuitInRain>true</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(80,80,217,0)</glowColor>
			</li>			
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<hasInteractionCell>true</hasInteractionCell>
		<surfaceType>Item</surfaceType>
		<!-- <designationHotKey>Misc12</designationHotKey> -->
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
		<defName>Moyo2_FabricationAddon</defName>
		<label>abysstech fabrication module</label>
		<description>An advanced module installed on abysstech production bench.It enables the rapid and efficient production of items using its mechanical arms and 3D printers.</description>
		<altitudeLayer>ItemImportant</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<selectable>false</selectable>
		<graphicData>
			<texPath>Building/MoyoBenchUpgrade</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,3.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToBuild>1800</WorkToBuild>
			<Mass>20</Mass>
			<Flammability>0.5</Flammability>
		</statBases>
		<size>(3,1)</size>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>42</pathCost>
		<costList>
			<Steel>50</Steel>
			<Moyo2_Abyssteel>50</Moyo2_Abyssteel>
			<ComponentSpacer>3</ComponentSpacer>
		</costList>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
		<clearBuildingArea>false</clearBuildingArea>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
			<isEdifice>false</isEdifice>
		</building>
		<researchPrerequisites>
			<li>Moyo2_Abysstech_Foundry</li>
		</researchPrerequisites>
		<designationCategory>Production</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<WorkTableWorkSpeedFactor>0.2</WorkTableWorkSpeedFactor>
				</statOffsets>
				<maxSimultaneous>1</maxSimultaneous>
				<maxDistance>1.9</maxDistance>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>Moyo2.PlaceWorker_OnBuilding</li>
		</placeWorkers>
	</ThingDef>
	<!-- 모요 아크화로 -->
	<ThingDef ParentName="BenchBase">
		<defName>Moyo2_ArcFurnace</defName>
		<label>abysstech arc furnace</label>
		<description>Powerful arc furnace used to craft abyssteel. It can extract metals from various items and burn unwanted materials without leaving any ash.. Just throw it in here. *Consumes significant amount of power.</description>
		<thingClass>Building_WorkTable</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<graphicData>
			<texPath>Building/MoyoFurnace</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4, 3.5)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>10000</WorkToBuild>
			<Flammability>0.5</Flammability>
			<WorkTableWorkSpeedFactor>1.5</WorkTableWorkSpeedFactor>
		</statBases>
		<size>(2,3)</size>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<fillPercent>0.5</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<pathCost>42</pathCost>
		<costList>
			<Steel>200</Steel>
			<Moyo2_Abyssteel>50</Moyo2_Abyssteel>
			<ComponentSpacer>1</ComponentSpacer>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<researchPrerequisites>
			<li>Moyo2_Abysstech_Foundry</li>
		</researchPrerequisites>
		<recipes>
			<li>ExtractMetalFromSlag</li>
			<li>CremateCorpse</li>
			<li>BurnDrugs</li>
			<li>SmeltOrDestroyThing</li>
			<li>SmeltWeapon</li>
			<li>SmeltApparel</li>
			<li>DestroyWeapon</li>
			<li>DestroyApparel</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<designationCategory>Production</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1800</basePowerConsumption>
				<shortCircuitInRain>true</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>7</glowRadius>
				<glowColor>(80,80,217,0)</glowColor>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<interactionCellOffset>(0,0,-2)</interactionCellOffset>
		<hasInteractionCell>true</hasInteractionCell>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<surfaceType>Item</surfaceType>
		<!-- <designationHotKey>Misc12</designationHotKey> -->
		<placeWorkers>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
	</ThingDef>
</Defs>