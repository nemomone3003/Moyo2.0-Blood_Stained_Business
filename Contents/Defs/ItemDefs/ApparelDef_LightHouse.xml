			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/BasicSuit</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>Moyo_Industrial</li>
				<li>Moyo_Military</li>
				<li>Moyo_Starting</li>
				<li>Moyo_Spacer</li>
			</tags>
		</apparel>
