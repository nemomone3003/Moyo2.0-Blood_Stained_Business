			<researchPrerequisite>Machining</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
			<unfinishedThingDef>UnfinishedHealthItemBionic</unfinishedThingDef>
		</recipeMaker>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<!-- <Moyo_Depthweave>60</Moyo_Depthweave> -->
		</costList>
	</ThingDef>
