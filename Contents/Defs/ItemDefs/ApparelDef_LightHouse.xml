	<ThingDef ParentName="Moyo_ApparelCategory_LightHouse">
		<defName>Moyo_BasicSuit</defName>
		<label>Standard bodysuit</label>
		<description>Protective suit for temperature-sensitive moyos. Looks stylish as well.</description>
		<graphicData>
			<texPath>Apparel/BasicSuit1</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<uiIconScale>1.2</uiIconScale>
		<!-- - -->
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>12000</WorkToMake>
			<Mass>0.5</Mass>
			<ArmorRating_Sharp>0.16</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.06</ArmorRating_Blunt>
