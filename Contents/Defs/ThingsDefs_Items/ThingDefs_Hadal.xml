				<defaultProjectile>Moyo2_Bullet_LMRSlugA</defaultProjectile>
				<warmupTime>2.1</warmupTime>
				<range>31.9</range>
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
				<soundCast>Laminar_Rifle</soundCast>
