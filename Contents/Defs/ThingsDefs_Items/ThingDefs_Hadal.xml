			<texPath>Weapon/TLMR_RifleMod</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>			
		</graphicData>
		<uiIconScale>1.2</uiIconScale>
		<soundInteract>Laminar_Activate2</soundInteract>		
		<!-- - -->
