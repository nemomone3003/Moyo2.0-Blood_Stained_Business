			<WorkToMake>8000</WorkToMake>
			<Mass>3</Mass>
		</statBases>
		<equippedStatOffsets>
			<ConstructionSpeed>0.2</ConstructionSpeed>
		</equippedStatOffsets>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>11</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>19.2</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
