			<texPath>Weapon/IDR_Wrench</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<uiIconScale>1.2</uiIconScale>
		<!-- - -->
