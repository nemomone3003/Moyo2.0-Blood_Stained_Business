<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- 모요 심장이식 -->
	<RecipeDef ParentName="SurgeryInstallBodyPartNaturalBase">
		<defName>InstallNaturalHeart_Moyo</defName>
		<label>install heart</label>
		<description>Install a biological heart.</description>
		<descriptionHyperlinks>
			<ThingDef>Moyo_Heart</ThingDef>
		</descriptionHyperlinks>
		<jobString>Installing heart.</jobString>
		<deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>
		<skillRequirements>
			<Medicine>8</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Moyo_Heart</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Moyo_Heart</li>
			</thingDefs>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>MoyoHeart</li>
		</appliedOnFixedBodyParts>
	</RecipeDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartProstheticBase">
		<defName>InstallSimpleProstheticHeart_Moyo</defName>
		<label>install prosthetic heart</label>
		<description>Install a prosthetic heart.</description>
		<descriptionHyperlinks>
			<ThingDef>SimpleProstheticHeart</ThingDef>
		</descriptionHyperlinks>
		<jobString>Installing prosthetic heart.</jobString>
		<deathOnFailedSurgeryChance>0.25</deathOnFailedSurgeryChance>	
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SimpleProstheticHeart</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SimpleProstheticHeart</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>MoyoHeart</li>
		</appliedOnFixedBodyParts>
		<addsHediff>SimpleProstheticHeart</addsHediff>
	</RecipeDef>

	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>InstallBionicHeart_Moyo</defName>
		<label>install bionic heart</label>
		<description>Install a bionic heart.</description>
		<descriptionHyperlinks>
			<ThingDef>BionicHeart</ThingDef>
		</descriptionHyperlinks>
		<jobString>Installing bionic heart.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BionicHeart</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BionicHeart</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>MoyoHeart</li>
		</appliedOnFixedBodyParts>
		<addsHediff>BionicHeart</addsHediff>
	</RecipeDef>

	<!-- 딥블루 축적 제거 -->
	<RecipeDef ParentName="SurgeryFlesh">
		<defName>CureDeepBlueTolerance</defName>
		<label>clear deepblue buildup</label>
		<description>Administer special enzymes that can clear residue deepblue in the body.</description>
		<workerClass>Recipe_RemoveHediff</workerClass>
		<jobString>Clearing deepblue residue</jobString>
		<workAmount>2000</workAmount>
		<hideBodyPartNames>true</hideBodyPartNames>
		<isViolation>false</isViolation>
		<targetsBodyPart>false</targetsBodyPart>
		<removesHediff>DeepBlueTolerance</removesHediff>
		<successfullyRemovedHediffMessage>{0} has successfully cleared {1}'s deepblue buildup.</successfullyRemovedHediffMessage>
		<surgerySuccessChanceFactor>4</surgerySuccessChanceFactor>
		<skillRequirements>
			<Medicine>5</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Abyssteel</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Abyssteel</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>	
</Defs>
